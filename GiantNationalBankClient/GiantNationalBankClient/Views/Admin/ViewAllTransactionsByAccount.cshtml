@using GiantNationalBankClient.Models
@model GetAccountByIdResponseModel
@{
    ViewData["Title"] = "Transactions";
}

<section class="intro">
    <h1>Transactions</h1>
</section>
<section class="dashboardLinks">
    <ul>
        <li class="nav-item">
            <a href="javascript: history.go(-1)">Back</a>
        </li>
    </ul>
</section>

<section>

</section>

<section>
    <h4>Transactions</h4>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Transaction Id</th>
                <th>Account Id</th>
                <th>Transaction Name</th>
                <th>Transaction Type</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Account.TransactionList != null && Model.Account.TransactionList.Count > 0)
            {
                @foreach (var Transaction in Model.Account.TransactionList)
                {
                    <tr>
                        <td>@Transaction.TransactionId</td>
                        <td>@Transaction.AccountId</td>
                        <td>@Transaction.TransactionName</td>
                        <td>@Transaction.TransactionType</td>
                        <td>@Transaction.Amount</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</section>


